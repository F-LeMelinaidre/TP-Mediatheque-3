<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.vannes.gretajavafx.controller.MailController">
   <Label layoutX="228.0" layoutY="31.0" text="Envoi courriel">
      <font>
         <Font size="24.0"/>
      </font>
   </Label>
   <Label layoutX="0.0" layoutY="138.0" text="Veuillez saisir l'email du destinataire pour lui envoyer la liste des emprunts :">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <TextField fx:id="tfRecipient" layoutX="150.0" layoutY="203.0" prefHeight="30.0" prefWidth="300.0"/>
   <Button layoutX="198.0" layoutY="280.0" mnemonicParsing="false" onAction="#sendMail" text="Valider">
      <font>
         <Font size="14.0"/>
      </font>
   </Button>
   <Button fx:id="btnFermer" layoutX="340.0" layoutY="280.0" mnemonicParsing="false" onAction="#fermerMail"
           text="Fermer">
      <font>
         <Font size="14.0"/>
      </font>
   </Button>
</AnchorPane>
