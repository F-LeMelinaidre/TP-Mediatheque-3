<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.vannes.gretajavafx.controller.AjoutEmpruntController">

    <Label text="ID de l'emprunteur:" />
    <TextField fx:id="emprunteurIdField" promptText="Entrez l'ID de l'emprunteur" />

    <Label text="ID du média:" />
    <TextField fx:id="mediaIdField" promptText="Entrez l'ID du média" />

    <Label text="Date d'emprunt:" />
    <DatePicker fx:id="dateEmpruntField" />

    <Label text="Date de retour:" />
    <DatePicker fx:id="dateRetourField" />

    <Button fx:id="ajouterButton" text="Ajouter Emprunt" onAction="#ajouterEmprunt" />

</VBox>

