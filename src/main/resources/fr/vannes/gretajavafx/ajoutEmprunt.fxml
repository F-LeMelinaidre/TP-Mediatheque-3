<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="8.0" stylesheets="@../../../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.vannes.gretajavafx.controller.AjoutEmpruntController">
   <VBox maxHeight="-Infinity" maxWidth="-Infinity">
      <children>
      
                      <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-form" text="ID de l'emprunteur:" />
          <TextField fx:id="emprunteurIdField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Entrez l'ID de l'emprunteur" />
      </children>
   </VBox>
   <VBox maxHeight="-Infinity" maxWidth="-Infinity">
      <children>
      
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-form" text="ID du média:" />
          <TextField fx:id="mediaIdField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Entrez l'ID du média" />
      </children>
   </VBox>
   <VBox maxHeight="-Infinity" maxWidth="-Infinity">
      <children>
      
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-form" text="Date d'emprunt:" />
          <DatePicker fx:id="dateEmpruntField" />
      </children>
   </VBox>
   <VBox>
      <children>
      
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-form" text="Date de retour:" />
          <DatePicker fx:id="dateRetourField" />
      </children>
   </VBox>

          <Button fx:id="ajouterButton" alignment="CENTER" onAction="#ajouterEmprunt" styleClass="submit" text="Ajouter Emprunt" textAlignment="CENTER">
      <VBox.margin>
         <Insets top="16.0" />
      </VBox.margin></Button>
   <styleClass>
      <String fx:value="main-frame" />
      <String fx:value="main-form" />
      <String fx:value="form-emprunt" />
   </styleClass>

      </VBox>
